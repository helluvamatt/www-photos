{% extends "default.twig" %}

{% block title %}Photos | Login{% endblock %}

{% block login %}{% endblock %}

{% block content %}
<div class="container">
	<div class="row">
		<div class="col-md-6 col-sm-8 col-xs-12 col-md-offset-3 col-sm-offset-2">
			<form method="post" action="{{ urlFor("/login") }}" class="form-horizontal" role="form">
				<input type="hidden" name="redirect" value="{{ flash['redirect'] }}" />
				<div class="panel panel-primary">
					<div class="panel-heading"><h3 class="panel-title">Login</h3></div>
					<div class="panel-body">
{% if flash['error'] %}
						<div class="alert alert-danger">
							{{ flash['error'] }}
						</div>
{% endif %}
			    		<div class="form-group">
							<label for="fieldUsername" class="col-sm-2 control-label">Username</label>
							<div class="col-sm-10">
								<input type="text" name="user[username]" class="form-control" id="fieldUsername" placeholder="Username" value="{{ username }}">
							</div>
						</div>
						<div class="form-group">
							<label for="fieldPAssword" class="col-sm-2 control-label">Password</label>
							<div class="col-sm-10">
								<input type="password" name="user[password]" class="form-control" id="fieldPassword" placeholder="Password">
							</div>
						</div>
						<div class="form-group">
							<div class="col-sm-offset-2 col-sm-10">
								<div class="checkbox">
									<label>
										<input name="remember" type="checkbox"> Remember me
									</label>
								</div>
							</div>
						</div>
					</div>
					<div class="panel-footer">
						<button type="submit" class="btn btn-default">Sign in</button>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>
{% endblock %}
